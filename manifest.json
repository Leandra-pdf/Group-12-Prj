{
    "manifest_version": 2,
    "name": "Notify!", 
    "version": "1.0",
    "description": "Click the matryoshka and it'll notify you what tab you're on!",
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "32": "images/icon32.png"
            }
        }, 
    "commands": { 
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+Shift+2"
            },
            "description": "Matryoshka pops up to notifiy you!"
        }, 
        "greet": {
            "suggested_key": {
                "default": "Alt+Shift+3"
            },
            "description": "Matryoshka notifies you bottom right of your page!"
        }
    },
    "background": {
        "scripts": [ "background.js", "notify.js" ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["notify.js"],
            "css": ["content.css"]
        }
    ],
    "web_accessible_resources": [
        "images/icon32.png"
    ],
    "permissions": [
        "tabs"
    ]
}